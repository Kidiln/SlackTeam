<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="5dp">


        <ImageView
            android:id="@+id/sl_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/empty_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/sl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/sl_icon" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="12dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/sl_fullname"
            style="@style/TextMemberForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dlg_fullname" />

        <TextView
            android:id="@+id/sl_phone"
            style="@style/TextMemberForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dlg_call" />

        <TextView
            android:id="@+id/sl_email"
            style="@style/TextMemberForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dlg_timezone" />

        <TextView
            android:id="@+id/sl_timezone"
            style="@style/TextMemberForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dlg_email" />
    </LinearLayout>
</LinearLayout>
